<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="bazinga.jstranslation.controller.class">Bazinga\Bundle\JsTranslationBundle\Controller\Controller</parameter>
    </parameters>

    <services>
        <service id="bazinga.jstranslation.controller" class="%bazinga.jstranslation.controller.class%">
            <argument index="0" type="service" id="translator" />
            <argument index="1" type="service" id="templating" />
            <argument index="2" type="service" id="bazinga.jstranslation.translation_finder" />
            <argument index="3" type="service" id="bazinga.jstranslation.locale_request_filter" />
            <argument index="4">%kernel.cache_dir%/bazinga-js-translation</argument>
            <argument index="5">%kernel.debug%</argument>
            <argument index="6"></argument> <!-- fallback (locale) -->
            <argument index="7"></argument> <!-- default domain    -->
            <argument index="8">86400</argument> <!-- http cache time -->
        </service>
    </services>
</container>
